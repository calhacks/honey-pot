{
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "attributePosition": "auto",
        "indentStyle": "tab",
        "indentWidth": 4,
        "lineWidth": 100,
        "lineEnding": "lf"
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "semicolons": "always",
            "trailingCommas": "all",
            "indentStyle": "tab",
            "indentWidth": 4,
            "lineWidth": 100,
            "lineEnding": "lf"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    }
}